{
  "name": "adfix-pm",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace @adfix/api run dev",
    "dev:web": "npm --workspace @adfix/web run dev",
    "build:api": "npm --workspace @adfix/api run build",
    "build:web": "npm --workspace @adfix/web run build",
    "start:api": "npm --workspace @adfix/api run start",
    "preview:web": "npm --workspace @adfix/web run preview",
    "typecheck": "npm --workspace @adfix/api run typecheck",
    "typecheck:web": "npm --workspace @adfix/web run typecheck",
    "db:migrate": "npm --workspace @adfix/api run db:migrate",
    "db:seed": "npm --workspace @adfix/api run db:seed",
    "db:seed:demo": "npm --workspace @adfix/api run db:seed:demo",
    "openapi:export": "npm --workspace @adfix/api run openapi:export",
    "test:api": "npm --workspace @adfix/api run test",
    "test:api:coverage": "npm --workspace @adfix/api run test:coverage"
  }
}
